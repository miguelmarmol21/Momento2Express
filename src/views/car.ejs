<%- include('partials/_header'); %>

<%- include('partials/_navbar'); %>

<div class="container">
  <div class="row">

    <div class="col">
      <h1 class="mt-3">Cars</h1>
    <form action="/car" method="post">
      <div class="form-group">
        <div class="col-sm-5">
        <input class="form-control mt-3" type="text" name="plateNumber" placeholder="Nro Placa" >
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-5">
          <input class="form-control mt-3" type="text" name="brand" placeholder="Marca" >
        </div>
      </div>
      <button class="btn btn-primary mt-3" type="submit">Guardar</button>
      <a class="btn btn-primary mt-3" href="/index">Ir a Inicio</a>
    </form>
    <br>
    <% if(errorMessage) { %>
      <p class="mt-3 text-dark" style="font-weight: bold;"><%= errorMessage %></p>
    <% } %>
    <br>
  </div>
  <div class="col">
    <div class="col-md-10 mx-auto text-center">
      <div class="container mt-5">
        <h2 class="h2">Table Cars</h2>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Placa</th>
              <th scope="col">marca</th>
              <th scope="col">estado</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < car.length; i++) { %>
            <tr>
              <td><%= car[i].plateNumber %></td>
              <td><strong><%= car[i].brand %></strong></td>
              <td><%= car[i].state %></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
</div>
<%- include('partials/_footer'); %>