    <div class="row">
      <div class="col-md-2 offset-md-5 p-3 mt-5 border border-secondar rounded text-center">
        <form action="/login" method="post">
          <h1 class="text-light">Login user</h1>
            <div class="form-group">
              <div class="col-sm-15">
                <input class="form-control mt-3" type="text" name="user" placeholder="Usuario" autofocus>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-15">
                <input class="form-control mt-3" type="password" name="password" placeholder="ContraseÃ±a">
